source 'https://rubygems.org'

# The HTTP client we used in the script (supports HTTP/2)
gem 'httpx'

# Parsing HTML (if you ever need to scrape raw pages instead of JSON)
gem 'nokogiri'

# Headless Chrome browser (The "Nuclear" option if API fails)
gem 'ferrum'

# Debugging tool (like pdb for python)
gem 'pry'

gem 'rspec'